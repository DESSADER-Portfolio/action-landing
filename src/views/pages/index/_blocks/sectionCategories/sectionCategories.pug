mixin sectionCategories(props = {})
  - const rootClassName = "section-categories";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-92",
      "lg:py-40",
      "md:py-32",
      "sm:py-16"
    ];

  section(
    class = classes 
    style = style
  )
    
    // Start: [container] 
    +container()
      
      // Start: [grid] 
      +grid({class: "justify-content-center"})

        // Start: [column-12] 
        +column({class: "column-12"})

          // Start: [section-heading] 
          +sectionHeading({
            class: [
              "text-align-center", 
              "lg:text-align-left",
              "mb-44", 
              "md:mb-24"
            ],
            heading: heading
          })
          // End: [section-heading] 
        // End: [column-12] 
      // End: [grid] 
    // End: [container]

    // Start: [container] 
    +container()
      
      // Start: [grid] 
      +grid()

        each item, index in items

          // Start: [column-3] 
          +column({
            class: [
              "column-3",
              "lg:column-6",
              "sm:column-12"
            ]
          })

            // Start: [box/category-item] 
            +box({
              class: [
                "category-item",
                "py-24",
                "px-24",
                "xl:px-20",
                items.length !== index + 1 
                  ? "lg:mb-20" 
                  : null
              ]
            })
              div(
                class = [
                  "category-item__badge",
                  "mb-24"
                ]
                style = `background-image: url(${require(`../../../assets/images/badge-${item.badge}.svg`)})`
              )
              +typography({
                class: [
                  "category-item__name",
                  "mb-8"
                ],
                as: "p",
                variant: "h3"
              })
                | #{item.name}
              +typography({
                class: "category-item__count",
                as: "span",
                variant: "body-small"
              })
                | #{item.count}
            // End: [box/category-item] 
          // End: [column-3] 
      // End: [grid] 
    // End: [container] 