mixin sectionAbout(props = {})
  - const rootClassName = "section-about";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const description = props.description || "";
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "pt-0",
      "pb-40",
      "lg:py-40",
      "md:py-32",
      "sm:py-16"
    ];

  section(
    class = classes 
    style = style
  )

    // Start: [container] 
    +container()

      // Start: [grid] 
      +grid({
        class: [
          "justify-content-space-between",
          "align-items-center"
        ]
      })

        // Start: [column-5] 
        +column({
          class: [
            "column-5",
            "lg:display-none"
          ]
        })
          div(class = `${rootClassName}__illustration`)
        // End: [column-5] 

        // Start: [column-5] 
        +column({
          class: [
            "column-5", 
            "xl:column-6", 
            "lg:column-12"
          ]
        })

          // Start: [section-heading] 
          +sectionHeading({
            class: "mb-24",
            heading: heading,
            description: description
          })
          // End: [section-heading] 

          // Start: [stack] 
          +stack({class: "flex-direction-column"})
            each item, index in items
              // Start: [stack/about-item] 
              +stack({
                class: [
                  "about-item",
                  "align-items-center",
                  items.length !== index + 1 
                    ? "mb-4" 
                    : null
                ]
              })
                +icon({
                  class: [
                    "about-item__icon",
                    "mr-4"
                  ], 
                  icon: "check"
                })
                +typography({
                  class: "about-item__description", 
                  variant: "body-default",
                  weight: "medium"
                }) 
                  | #{item}
              // End: [stack/about-item] 
          // End: [stack] 
        // End: [column-5] 
      // End: [grid] 
    // End: [container] 