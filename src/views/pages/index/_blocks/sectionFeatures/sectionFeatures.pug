mixin sectionFeatures(props = {})
  - const rootClassName = "section-features";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const description = props.description || "";
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-92",
      "lg:py-52",
      "md:py-44",
      "sm:py-32"
    ];

  section(
    class = classes 
    style = style
  ) 
    // Start: [container] 
    +container()
      
      // Start: [grid] 
      +grid({class: "justify-content-center"})

        // Start: [column-6] 
        +column({
          class: [
            "column-6",
            "lg:column-12"
          ]
        })

          // Start: [section-heading] 
          +sectionHeading({
            class: [
              "text-align-center", 
              "lg:text-align-left",
              "mb-44", 
              "md:mb-24"
            ],
            heading: heading,
            description: description
          })
          // End: [section-heading] 
        // End: [column-6] 
      // End: [grid] 
    // End: [container]

    // Start: [container] 
    +container()
      
      // Start: [grid] 
      +grid()

        each item, index in items

          // Start: [column-4] 
          +column({
            class: [
              "column-4", 
              "md:column-12"
            ]
          })

            // Start: [box/feature-item] 
            +box({class: [
              "feature-item",
              "display-flex",
              "flex-direction-column",
              "sm:flex-direction-row",
              "align-items-center",
              "py-32", 
              "px-64",
              "xl:px-12",
              "sm:py-12",
              items.length !== index + 1 
                ? "md:mb-16" 
                : null
            ]})
              div(
                class = [
                  "feature-item__badge", 
                  "mb-24", 
                  "sm:mb-0",
                  "sm:mr-12"
                ]
                style = `background-image: url(${require(`../../../assets/images/badge-${item.badge}.svg`)})`
              )
              +typography({
                class: [
                  "feature-item__description",
                  "text-align-center",
                  "sm:text-align-left"
                ],
                as: "p",
                variant: "h3"
              })
                | #{item.description}
            // End: [box/feature-item] 
          // End: [column-4] 
      // End: [grid] 
    // End: [container] 