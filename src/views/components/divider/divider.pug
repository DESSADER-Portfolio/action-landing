mixin divider(props = {})
  - const directions = ["horizontal", "vertical"];
  - const variants = ["light", "dark"];

  - const rootClassName = "divider";
  - const className = props.class || null;
  - const style = props.style || null;
  - const direction = directions.includes(props.direction) ? props.direction : directions[0];
  - const variant = variants.includes(props.variant) ? props.variant : variants[0];
  -
    const classes = [
      rootClassName,
      {[`${rootClassName}:direction-${direction}`]: direction},
      {[`${rootClassName}:variant-${variant}`]: variant},
      className
    ];

  div(
    class = classes 
    style = style
  )
    block