mixin textField(props = {})
  - const rootClassName = "text-field";
  - const className = props.class || null;
  - const style = props.style || null;
  - const type = props.type || "text";
  - const value = props.value || "";
  - const placeholder = props.placeholder || "";
  - const icon = props.icon || null;
  -
    const classes = [
      rootClassName,
      className
    ];

  div(
    class = classes 
    style = style
  )
    if icon
      div(class = `${rootClassName}__icon`)
        +icon({icon: icon})
    input(
      class = [
        "base-input-field", 
        `${rootClassName}__control`
      ]
      type = type
      value = value
      placeholder = placeholder
    )