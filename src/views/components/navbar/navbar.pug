include nav/nav.pug

mixin navbar(props = {})
  - const rootClassName = "navbar";
  - const className = props.class || null;
  - const style = props.style || null;
  - const menuItems = props.menuItems || [];
  - const extraItems = props.extraItems || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-32"
    ];

  nav(
    class = classes 
    style = style
  )
    // Start: [Container] 
    +container()
      
      // Start: [Stack] 
      +stack({class: ["justify-content-space-between", "align-items-center"]})
        +logo()
        
        // Start: [Menu]
        div(class = ["menu", "display-flex", "align-items-center"])
          +nav({class: ["mr-44", "lg:mr-0","lg:mb-32"], items: menuItems})
          div(class = [
            "extra", 
            "display-flex", 
            "sm:flex-direction-column",
            "sm:px-24",
          ])
            each item in extraItems
              +button({label: item.label, variant: item.variant})

        // End: [Menu] 

        button(class = "menu-control")
          span
          span
          span

      // End: [Stack] 
    // End: [Container] 