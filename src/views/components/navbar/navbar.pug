include nav/nav.pug

mixin navbar(props = {})
  - const rootClassName = "navbar";
  - const className = props.class || null;
  - const style = props.style || null;
  - const menuItems = props.menuItems || [];
  - const extraItems = props.extraItems || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-32"
    ];

  nav(
    class = classes 
    style = style
  )
    // Start: [container] 
    +container()
      
      // Start: [stack] 
      +stack({
        class: [
          "justify-content-space-between",
          "align-items-center"
        ]
      })
        +logo()
        
        // Start: [menu]
        div(
          class = [
            "menu", 
            "display-flex", 
            "align-items-center"
          ]
        )

          // Start: [nav] 
          +nav({
            class: [
              "mr-44", 
              "lg:mr-0",
              "lg:mb-32"
            ], 
            items: menuItems
          })
          // End: [nav]

          // Start: [stack/extra] 
          +stack({
            class: [
              "extra",
              "sm:flex-direction-column",
              "sm:px-24"
            ]
          })
            each item in extraItems
              // Start: [button]
              +button({
                label: item.label, 
                variant: item.variant
              }) 
              // End: [button] 
          // End: [stack/extra] 
        // End: [menu] 

        // Start: [button] 
        button(class = "menu-control")
          span
          span
          span
        // End: [button] 
      // End: [stack] 
    // End: [container] 